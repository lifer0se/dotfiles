Config { font = "xft:Roboto:size=13:bold"
				, additionalFonts = [ "xft:FontAwesome 5 Free Solid:pixelsize=13"
                           , "xft:FontAwesome:pixelsize=14"
                           ]

       , border = NoBorder
       , bgColor = "#2B2E37"
       , fgColor = "#929AAD"
       , alpha = 255
       , position = TopSize L 100 35
       , textOffset = -1
       , iconOffset = -1
       , lowerOnStart = True
       , allDesktops  = True
       , persistent   = False
       , hideOnStart = False
       , iconRoot = "."
       , commands = [
			       Run UnsafeXMonadLog
					 , Run Date "%a, %d %b   <fn=1>ï€—</fn>   %H:%M:%S" "date" 10
			     , Run Cpu ["-L","0","-H","70","--normal","#AAC0F0","--high","#C1514E"] 10
           , Run Memory ["-t","Mem: <fc=#AAC0F0><usedratio></fc>%"] 10
           , Run Com "/home/amnesia/.scripts/available_updates.sh" [] "updates" 100
            ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = " %UnsafeXMonadLog% } %date% { <action=setsid -f termite -e ~/.scripts/pop_upgrade.sh>%updates%</action>   <action=termite --class BashTOP -e bashtop>%cpu%   |   %memory%</action>   "
       }
