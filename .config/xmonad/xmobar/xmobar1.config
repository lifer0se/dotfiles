Config { font = "xft:Roboto:size=12:bold"
       , additionalFonts =
          [ "xft:FontAwesome 5 Free Solid:pixelsize=14"
          , "xft:FontAwesome:pixelsize=10:bold"
          , "xft:FontAwesome 5 Free Solid:pixelsize=16"
          ]
       , border = NoBorder
       , bgColor = "#2B2E37"
       , fgColor = "#929AAD"
       , alpha = 255
       , position = TopSize L 100 37
       , textOffset = -1
       , iconOffset = -1
       , lowerOnStart = True
       , allDesktops  = True
       , persistent   = False
       , hideOnStart = False
       , iconRoot = "."
       , commands =
         [ Run UnsafeXPropertyLog "_XMONAD_LOG_1"
         , Run Date "%a, %d %b   <fn=1></fn>   %H:%M:%S" "date" 10
         , Run Memory ["-t","Mem: <fc=#AAC0F0><usedratio></fc>%"] 10
         , Run Com "/home/amnesia/.config/xmonad/xmobar/cpu_temp.sh" [] "cpu" 10
         , Run Com "/home/amnesia/.config/xmonad/xmobar/available_updates.sh" [] "updates" 100
         , Run Com "/home/amnesia/.config/xmonad/xmobar/trayer-padding.sh" [] "trayerpad" 100
         ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "<action=xdotool key super+d>     <fn=3></fn>     </action>%_XMONAD_LOG_1% } <action=xdotool key super+r>%date%</action> { <action=setsid -f termite -e ~/scripts/pop_upgrade.sh>%updates%</action>     <action=xdotool key super+y>%cpu%     |     %memory%</action>   %trayerpad%"
       }
